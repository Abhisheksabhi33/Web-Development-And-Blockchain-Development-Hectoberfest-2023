<style>
    
.progress-header {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  background-color: #f1f1f1;
  display: none;
}



.progress-container {
  width: 100%;
  height: 8px;
  background: #ccc;
}

.progress-bar {
  height: 8px;
  background: #04AA6D;
  width: 0%;
}

#gotoTopButton {
    display: none;
    position: fixed;
    bottom: 20px;
    right: 30px;
    font-size: 18px;
    border: none;
    outline: none;
    background-color: red;
    color: white;
    cursor: pointer;
    padding: 25px;
    border-radius: 4px;
    background-image: url('data:image/png;base64,');
    background-size: cover;
    background-repeat: no-repeat;
    }

    #gotoTopButton:hover {
    background-color: #555;
    }
   
</style>
<div class="progress-header" id="progress-header">
    <div class="progress-container">
      <div class="progress-bar" id="myBar"></div>
    </div>  
</div>
<button onclick="topFunction()" id="gotoTopButton" title="Go to top"></button>
<script>
    // When the user scrolls the page, execute myFunction 
    window.onscroll = function() {scrollProgressFunction(),scrollFunction()};
    
    function scrollProgressFunction() {
      var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      var scrolled = (winScroll / height) * 100;
      document.getElementById("myBar").style.width = scrolled + "%";
    }
    
    function scrollFunction() {
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        document.getElementById("gotoTopButton").style.display = "block";
        document.getElementById("progress-header").style.display = "block";
      } else {
        document.getElementById("gotoTopButton").style.display = "none";
        document.getElementById("progress-header").style.display = "none";
      }
    }
    
    function topFunction() {
      document.body.scrollTop = 0;
      document.documentElement.scrollTop = 0;
    }
</script>
    